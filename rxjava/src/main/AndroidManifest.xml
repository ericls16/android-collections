<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ls.rxjava">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--RxJava1-->

        <activity
            android:name=".ui.rxjava1.RxJava1Activity"
            android:label="RxJava1"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation" />

        <activity
            android:name=".ui.rxjava1.RxJava1BasicActivity"
            android:label="RxJava1-基本实现"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation" />

        <activity
            android:name=".ui.rxjava1.RxJava1SchedulerActivity"
            android:label="RxJava1-进阶"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation" />

        <!--RxJava2-->

        <activity
            android:name=".ui.rxjava2.RxJava2Activity"
            android:label="RxJava2"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation" />
    </application>

</manifest>