<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:textColor="@android:color/holo_red_light"
                android:text="观察者、被观察者的创建和关联" />

            <Button
                android:id="@+id/btn_observer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Observer"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_subscriber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Subscriber"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_observable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Observable"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_quick_create_event_queue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="快捷创建事件队列"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="订阅-观察者和被观察这联系起来"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_incomplete_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="不完整定义回调"
                android:textAllCaps="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.02dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:textColor="@android:color/holo_blue_dark"
                android:text="场景示例" />

            <Button
                android:id="@+id/btn_print_string_array"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="不完整定义回调：事件队列打印字符数组"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_show_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="订阅Observer:由id取得Drawable图片并显示在ImageView中"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/placeholder"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</layout>
