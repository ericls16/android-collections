<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_observerOn_subscribeOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="observerOn和subscribeOn方法"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_observerOn_subscribeOn_show_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="observerOn和subscribeOn应用于id取得图片并显示的案例"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/placeholder"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_transform_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="map变换案例：integer加工转换成string"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_flatmap_prelude_print_student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="flatMap前奏：打印学生姓名"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_flatmap_prelude_print_student_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="flatMap前奏：打印所有学生各自选修的课程"
            android:textAllCaps="false" />

    </LinearLayout>
</layout>
